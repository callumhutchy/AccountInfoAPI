@page "/register"
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<form method = "post"> 
    <div>
        <label>Username</label>
        <input name="username"> 
    </div>
    <br>
    <div>
        <label>Email</label>
        <input name="emailaddress" type="email"> 
    </div>
    <br>
    <div>
        <label>Password</label>
        <input name="password" type="password"> 
    </div>
    <br>
    <div>
        <label>Confirm Password</label>
        <input name="confirmpassword" type="password">
    </div>
    <br>
    <div>
        <input type="submit">
    </div>
</form>